<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" , autofocus: true %>
        <br>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "off" %>
        <br>
    </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
