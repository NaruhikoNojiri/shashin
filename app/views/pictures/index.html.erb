<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>

    <h1>写真一覧画面</h1>

    <%= link_to "新規投稿",new_picture_path, class: 'btn btn-default'%>
    <% @pictures.each do |picture| %>
      <p><strong><%= picture.title %></strong></p>
      <p><%= picture.content %></p>
      <%= link_to "編集",edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除",picture_path(picture.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>

    <% end %>
  </div>
</div>
