<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h1>編集画面</h1>
    <%= form_for(@picture) do |f| %>
      <% if @picture.errors.any? %>
        <div id="error_explanation">
          <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
          <ul>
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.label :タイトル %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block'%>
    <% end %>

    <%= link_to "写真一覧画面にもどる", pictures_path %>
  </div>
</div>
